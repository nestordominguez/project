<%= form_for @user, url: {action: "update"}, :html => {:class => "form-horizontal"} do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-md-offset-4">
    <div class="field form-group form-group-sm">
      <%= f.label :email, class: "col-sm-2 control-label" %><br>
      <div class="col-sm-10">
        <%= f.text_field :email %>
      </div>
    </div>
    <div class="field form-group form-group-sm">
      <%= f.label :password, class: "col-sm-2 control-label" %><br>
      <div class="col-sm-10">
        <%= f.password_field :password %>
      </div>
    </div>
    <div class="field form-group form-group-sm">
      <%= f.label :password_confirmation, class: "col-sm-2 control-label" %><br>
      <div class="col-sm-10">
        <%= f.password_field :password_confirmation %>
      </div>
    </div>
    <div class="field form-group form-group-sm">
      <%= f.label :active, class: "col-sm-2 control-label" %><br>
      <div class="col-sm-10">
        <%= f.check_box :active %>
      </div>
    </div>
    <div class="actions col-md-offset-10">
      <%= f.submit "Update"%>
    </div>
  </div>
<% end %>
