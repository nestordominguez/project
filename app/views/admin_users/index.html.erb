<%if notice%>
  <p id="notice" class="alert alert-success"><%= notice %></p>
<%end%>

<h1 class="col-md-12">Listing Users</h1>
<div class="responsive-class">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>User Email</th>
        <th>Acceso</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @admin_users.each do |admin_user| %>
        <tr>
          <td><%= admin_user.email %></td>
          <td><%= role(admin_user)%></td>
          <td><%= link_to 'Show', admin_user_path(admin_user), class: "links"  %></td>
          <td><%= link_to 'Edit', edit_admin_user_path(admin_user), class: "links"  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>
