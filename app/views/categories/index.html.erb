<p id="notice"><%= notice %></p>

<h1 class="col-md-12">Listing Categories</h1>

<div class="responsive-class">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= link_to 'Show', category, class: "links" %></td>
          <td><%= link_to 'Edit', edit_category_path(category), class: "links" %></td>
          <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "links" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
</div>

<br>

<%= link_to 'New Category', new_category_path, class: "links" %>
