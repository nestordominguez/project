<%= form_for(@incident, :html => {:class => "form-horizontal"}) do |f| %>
  <% if @incident.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@incident.errors.count, "error") %> prohibited this incident from being saved:</h2>

      <ul>
      <% @incident.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-md-offset-4">
    <div class="field form-group form-group-sm">
      <%= f.label :title, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :title%>
      </div>
    </div>

    <div class="field form-group form-group-sm">
      <%= f.label :priority, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= select("post", "categorie_id", priorities_options {|p| [ p ] }, {include_blank: 'Select priority'}) %>
      </div>
    </div>

    <div class="field form-group form-group-sm">
      <%= f.label :content, class: "col-sm-2 control-label"  %>
      <div class="col-sm-10">
        <%= f.text_area :content %>
      </div>
    </div>
    
  </div>

  <div class="actions col-md-offset-10">
    <%= f.submit %>
  </div>
<% end %>
