<p id="notice"><%= notice %></p>

<h1>Listing Incidents</h1>

<table>
  <thead>
    <tr>
      <th>Comment</th>
      <th>user email</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @incidents.each do |incident| %>
      <tr>
        <% if current_user.showall %>
          <td><%= incident.comment %></td>
          <td><%= incident.user.email %></td>
          <td><%= incident.title %></td>
          <td><%= link_to 'Show', incident %></td>
          <td><%= link_to 'Edit', edit_incident_path(incident) %></td>
          <td><%= link_to 'Destroy', incident, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <% if incident.user_id == current_user.id %>
            <td><%= incident.comment %></td>
            <td><%= incident.user.email %></td>
            <td><%= link_to 'Show', incident %></td>
            <td><%= link_to 'Edit', edit_incident_path(incident) %></td>
            <td><%= link_to 'Destroy', incident, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <%end%>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>


  <%if current_user.showall%>
    <%= button_to "only show my incidents", {action: "update_user", id: current_user.id}, {method: :put} %>
  <%else%>
    <%= button_to "show all", {action: "update_user", id: current_user.id}, {method: :put} %>
  <%end%>

