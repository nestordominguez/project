<%if notice%>
  <p id="notice" class="alert alert-success"><%= notice %></p>
<%end%>

<p class="col-md-4">
  <strong>Priority:</strong>
  <%= @incident.priority %>
</p>

<p class="col-md-4">
  <strong>Title:</strong>
  <%= @incident.title %>
</p>

<p class="col-md-4">
  <strong>Content:</strong>
  <%= @incident.content %>
</p>
<div class="col-sm-12">
	<%= link_to 'Edit', edit_incident_path(@incident), class: "col-md-1 links" %>
	<%= link_to 'Back', incidents_path, class: "col-md-1 links" %>
</div>

