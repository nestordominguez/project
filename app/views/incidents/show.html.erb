<%if notice%>
  <p id="notice" class="alert alert-success"><%= notice %></p>
<%end%>

<p class="col-md-2">
  <strong>Priority:</strong>
  <%= @incident.priority %>
</p>

<p class="col-md-2">
  <strong>Title:</strong>
  <%= @incident.title %>
</p>

<p class="col-md-12">
  <strong>Content:</strong>
  <%= @incident.content %>
</p>
  <% @comments.each do |comment| %>
    <%if comment.incident.id == @incident.id%>
      <div class="col-md-offset-2 col-md-10 show-comment">
        The user <%= comment.user.email %> has comment:<br>
        <p>
          <%= comment.content %>
        </p>
        <p>
          <%= link_to 'Edit', edit_comment_path(comment) %>
          <%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %>
        </p>
      </div><br>
    <%end%>
  <% end %>

<br>

<div class="col-sm-12">
	<%= link_to 'Edit', edit_incident_path(@incident), class: "col-md-1 links" %>
	<%= link_to 'Back', incidents_path, class: "col-md-1 links" %>
</div>
